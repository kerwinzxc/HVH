.BaseHud
{
    width: 100%;
    height: 100%;
    flow-children: down;
}

.TimerBox
{
    flow-children: right;
    horizontal-align: center;
    width: 366px;
    height: 130px;
    /*background-image: url("file://{resources}/images/custom_game/timer/sun.png");*/

    margin-top: -140px;
    transition-property: transform;
    transition-duration: 0.25s;
    transition-timing-function: linear;
}

.TimerBox Label
{
    color: white;
    font-size: 26px;
    text-shadow: 1px 1px 2px 3.0 #000000;
    font-weight: bold;

}

#HVH_CycleImage
{
    width: 100%;
    height: 100%;
    opacity: 0;
    margin-top: -140px;
    transition-property: opacity;
    transition-duration: 1.0s;
    transition-timing-function: linear;
}

#TimerMsg
{
    margin-top: 44px;
    margin-left: 10px;
    text-align: right;
    width:50%;
}

#TimerRemaining
{
    margin-top: 44px;
    margin-left: 12px;
    text-align: left;
    width:50%;
}

.FadeIn
{
    transform: translateY(100px);
}

.MakeVisible
{
    visibility: visible;
    opacity: 1;
}